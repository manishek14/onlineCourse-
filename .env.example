# Application
NODE_ENV=production
PORT=3000

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_DATABASE=courseOnline

# MongoDB URL (for local development without Docker)
MONGODB_URL=mongodb://localhost:27017/courseOnline

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_very_long_and_secure_refresh_secret_key_here_min_32_chars

# SMS API (SMS.ir)
SMS_IR_API_KEY=your_sms_ir_api_key_here
SMS_IR_API_KEY_TEST=your_sms_ir_test_api_key_here

# Mongo Express (Optional - for development)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123
